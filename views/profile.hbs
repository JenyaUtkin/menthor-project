<form class='container' action='/profil/{{user.id}}' method='post'>
  {{#if user.dataValues.flag}}
    {{!-- {{user.dataValues.flag}} --}}
    <div class='mdl-textfield mdl-js-textfield'>
      <label class='mdl-textfield__label'>ФИО</label>
      <input class='mdl-textfield__input' type='text' name='name' />
    </div>
    <div class='mdl-textfield mdl-js-textfield'>
      <label class='mdl-textfield__label'>О себе</label>
      <input class='mdl-textfield__input' type='text' name='body' />
    </div>
    <div class='mdl-textfield mdl-js-textfield'>
      <label class='mdl-textfield__label'>Прайс</label>
      <input class='mdl-textfield__input' type='text' name='price' />
    </div>
    <div class='mdl-textfield mdl-js-textfield'>
      <label class='mdl-textfield__label'>опыт работы</label>
      <input class='mdl-textfield__input' type='text' name='title' />
    </div>
    <div class='mdl-textfield mdl-js-textfield'>
