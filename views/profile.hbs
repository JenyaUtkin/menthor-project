      <input class='mdl-textfield__input' type='text' name='link' />
    </div>

  {{/if}}
  
  <button
    class='mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent center'
    type='submit'
  >Сохранить</button>
</form>
