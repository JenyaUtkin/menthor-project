<form action='/user/register' method='post'>

  <div class='mdl-textfield mdl-js-textfield'>
    <label class='mdl-textfield__label' for='exampleInputEmail1'>Login</label>
    <input
      class='mdl-textfield__input'
      type='textl'
      aria-describedby='emailHelp'
      name='name'
    />
    <div id='emailHelp'></div>
  </div>
  <div class='mdl-textfield mdl-js-textfield'>
    <label class='mdl-textfield__label' for='exampleInputEmail1'>Email</label>
    <input
      class='mdl-textfield__input'
      type='email'
      aria-describedby='emailHelp'
      name='login'
    />
    <div id='emailHelp'></div>
  </div>
  <div class='mdl-textfield mdl-js-textfield'>
    <label class='mdl-textfield__label'>Password</label>
    <input class='mdl-textfield__input' type='password' name='password' />
  </div>
<div>
<label class="mdl-radio mdl-js-radio mdl-js-ripple-effect" for="option-1">
  <input type="radio" id="option-1" class="mdl-radio__button" name="options" value="1" checked>
  <span class="mdl-radio__label">Student</span>
</label>

<label class="mdl-radio mdl-js-radio mdl-js-ripple-effect" for="option-2">
  <input type="radio" id="option-2" class="mdl-radio__button" name="options" value="2">
  <span class="mdl-radio__label">Mentor</span>
</label>
</div >
<div class='container1'>
  
  <button
    type='submit'
    class='mdl-button mdl-js-button mdl-button--raised mdl-button--colored'
  > Зарегистрироваться </button>
  </div>
</form>